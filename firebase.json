{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/v1/admin/catalogue/add",
        "function": "v1catalogueAdd",
        "region": "europe-west1"
      },
      {
        "source": "/v1/admin/catalogue/update",
        "function": "v1catalogueUpdate",
        "region": "europe-west1"
      },
      {
        "source": "/v1/admin/catalogue/delete",
        "function": "v1catalogueDelete",
        "region": "europe-west1"
      },
      {
        "source": "/v1/public/catalogue/opds",
        "function": "v1catalogueGetOPDS",
        "region": "europe-west1"
      }
    ]
  }
}
